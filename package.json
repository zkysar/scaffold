{
  "name": "@scaffold/cli",
  "version": "0.1.0",
  "description": "A generic project structure management CLI tool with template-based scaffolding",
  "main": "dist/index.js",
  "bin": {
    "scaffold": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsc --watch & tsc-alias --watch",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:contract": "jest tests/contract",
    "test:integration": "npm run build && jest tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":50,\"functions\":50,\"lines\":50,\"statements\":50}}'",
    "test:coverage:diff": "jest --coverage --changedSince=origin/main --coverageThreshold='{\"global\":{\"branches\":50,\"functions\":50,\"lines\":50,\"statements\":50}}'",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage .scaffold-temp",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "scaffold",
    "template",
    "project-structure",
    "development-tools"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "minimatch": "^9.0.3",
    "module-alias": "^2.2.3",
    "reflect-metadata": "^0.2.2",
    "semver": "^7.5.4",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.8",
    "@types/minimatch": "^5.1.2",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.9.0",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "mock-fs": "^5.2.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ]
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "types": "./dist/index.d.ts"
}
