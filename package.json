{
  "name": "@scaffold/cli",
  "version": "0.1.0",
  "description": "A generic project structure management CLI tool with template-based scaffolding",
  "main": "dist/index.js",
  "bin": {
    "scaffold": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:contract": "jest tests/contract",
    "test:integration": "jest tests/integration",
    "test:integration:docker": "npm run build && npm run test:integration",
    "test:cli": "npm run build && docker compose --profile test-cli up --abort-on-container-exit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:check": "jest --coverage --coverageThreshold='{\"global\":{\"branches\":50,\"functions\":50,\"lines\":50,\"statements\":50}}'",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage .scaffold-temp",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "scaffold",
    "template",
    "project-structure",
    "development-tools"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^8.2.6",
    "minimatch": "^9.0.3",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.8",
    "@types/minimatch": "^5.1.2",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.9.0",
    "@types/semver": "^7.5.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.54.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "mock-fs": "^5.2.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
