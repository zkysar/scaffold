#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

# Check code coverage before push
echo "ğŸ§ª Checking code coverage (minimum 50% required)..."
npm run test:coverage:check

if [ $? -ne 0 ]; then
    echo "âŒ Code coverage check failed!"
    echo "ğŸ“Š Minimum coverage requirement: 50% for all metrics (branches, functions, lines, statements)"
    echo "ğŸ’¡ Run 'npm run test:coverage' to see detailed coverage report"
    exit 1
fi

echo "âœ… Code coverage check passed!"

# Run all tests including Docker integration tests
echo "Running all tests before push..."

# Run unit tests
npm run test:unit

# Run integration tests in Docker
echo "Running Docker integration tests..."
docker compose --profile test-integration up --abort-on-container-exit --exit-code-from test-integration

echo "All tests passed!"